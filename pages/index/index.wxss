/**index.wxss**/
.container {
  height: 100%;
  box-sizing: border-box;
} 
.custom{
  margin: 0 auto;
  background: #999;
  position: relative;
  overflow: hidden;
}
.custom>image{
  margin: 0 auto;
}

.uploader{
  position: absolute;
  background: #fff;
  overflow: hidden;
}
.uploader>image {
  position: absolute;
}
.up{
  width: 100%;
  height: 100%;
  border: 2rpx solid #d9d9d9;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}
.up:before {
  content: " ";
  position: absolute;
  width: 4rpx;
  height:80rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.up:after {
  content: " ";
  position: absolute;
  height: 4rpx;
  width: 80rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}
.slider{
  border-top: 1px solid #c11;
}
.btn-group{
  padding: 0 50rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.btn-item{
  width: 50rpx;
  color: #000;
  font-size: 24rpx;
}
.btn-item>image{
  width: 50rpx;
  height: 50rpx;
}
.btn{
  width: 300rpx;
  height: 100rpx;
  background: #c11;
  line-height: 100rpx;
  border-radius: 5px;
  color: #fff;
  text-align: center;
  margin: 60rpx auto 0 auto;
}
.canvasWrap {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  text-align: center;
}
.maskCanvas {
  position: absolute;
  left: -200%;
  top: 0;
}
.resImg {
  margin-top: 10px;
}
